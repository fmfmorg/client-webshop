---
import ShopContent from '@components/shop/intro.astro'
import Layout from '../components/layout/index.astro'
import type { IProduct } from '@components/catalogue-item/interfaces';
import { getCookieValueWithKey, httpRequestHeader, sessionCookieOption, type IMdwResponse, type IShoppingBagSidebarProp } from '@misc';
import { FM_CLIENT_WEBSHOP_API_URL, FM_ENV_MODE } from 'astro:env/server'
// import { FM_HEADER_CAROUSEL_OFF_COOKIE_KEY } from 'astro:env/client'
import { headerCarouselOffKey } from '@misc'

interface IApiResponse {
    productIDs:string[];
    productMap:{[k:string]:IProduct};
}

const isProduction = FM_ENV_MODE === 'production'
const initialSessionID = Astro.cookies.get("sessionID")?.value || ""
const headerCarouselOff = Astro.cookies.has(headerCarouselOffKey)
const resp = await fetch(`${ FM_CLIENT_WEBSHOP_API_URL }/webshop/shop-page-init${Astro.url.search}`,{
    headers:httpRequestHeader(true,'SSR',true,false,initialSessionID,Astro.clientAddress,!headerCarouselOff)
})
if (!resp.ok) return Astro.redirect('/maintenance')

const json = await resp.json()
let {
    mdwResponse:{
        expiresAt,
        sessionID,
        signedIn,
        cartProductDetailsMap,
        cartItemMap,
        cartContent,
        paymentInProcess,
        selCollectionPoint,
        prfCollectionPoint,
        shopAddressMap,
        minSpendForFreeShipping,
        firstName,
        headerCarouselTexts,
    },
    apiResponse:{
        productIDs,
        productMap,
    }
} = json as {
    mdwResponse:IMdwResponse;
    apiResponse:IApiResponse;
}
console.log("typeof sessionID: ", typeof sessionID)
Astro.cookies.set('sessionID',sessionID,sessionCookieOption(isProduction,expiresAt))

productMap = {...productMap,...cartProductDetailsMap}

const shoppingBagProp:IShoppingBagSidebarProp = {
    isSignedIn:signedIn,
    cartContent,
    freeShippingLimit:minSpendForFreeShipping,
    cartItemMap,
    productDetailsMap:productMap
}

const csrftoken = crypto.randomUUID() //getCookieValueWithKey(resp.headers.getSetCookie(),"csrf_token")
console.log("typeof csrftoken: ", typeof csrftoken)
Astro.cookies.set("csrf_token",csrftoken,sessionCookieOption(isProduction))

console.log("csrf_token: ", csrftoken)
console.log("sessionID: ", sessionID)
console.log("initialSessionID: ", initialSessionID)
console.log("headerCarouselOff: ", headerCarouselOff)
console.log("headerCarouselOffKey: ", headerCarouselOffKey)
console.log(productMap['240001EHSS'])
---

<Layout {...{
    csrftoken,
    shoppingBagProp,
    paymentInProcess,
    selCollectionPoint,
    prfCollectionPoint,
    shopAddressMap,
    signedIn,
    firstName,
    title:'Jewellery',
    headerCarouselTexts,
    titleAddForHer:true
}}>
    <ShopContent productIDs={productIDs || []} productObj={productMap} cartItemObj={cartItemMap} />
</Layout>