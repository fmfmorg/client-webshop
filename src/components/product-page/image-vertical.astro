---
// import { FM_PUBLIC_IMAGE_URL_PREFIX } from 'astro:env/client'
import { imageUrlPrefix } from '@misc'
import type { IProductImages } from "@components/catalogue-item/interfaces";

type Props = IProductImages & {alt:string}


const { name, ext, alt } = Astro.props as Props
---

<picture>
    {
        [
            '.avif',
            '.webp',
            ext
        ].map(e=>(
            e === ext ?
            <img src={`${imageUrlPrefix}${name}${e}`} alt={alt} />
            :
            <source srcset={`${imageUrlPrefix}${name}${e}`} />
        ))
    }
</picture>