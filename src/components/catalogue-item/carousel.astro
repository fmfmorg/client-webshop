---
import type { IProductImages } from '@components/catalogue-item/interfaces'
import Image from './image.astro';

interface IProps {
    images:IProductImages[];
    id:string;
    productPageProduct?:boolean;
    renderImages:boolean;
    imageSize?:number;
}

const { images, id, productPageProduct = false, renderImages, imageSize } = Astro.props as IProps

---

<>
    {
        images.map(({name,ext},i)=>(
            <Image {...{
                name,
                ext,
                id,
                checked:i===0,
                index:i,
                len:images.length,
                productPageProduct,
                render:renderImages,
                imageSize,
                showRadio:images.length > 1
            }} />
        ))
    }
</>