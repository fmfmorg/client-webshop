---
const 
	hamburgerGapY = 30,
	hamburgerMarginX = 10,
	hamburgerCenter= 50,
	hamburgerY = Array(3).fill(undefined).map((_,i)=>hamburgerCenter + (i-1) * hamburgerGapY),
	hamburgerX = Array(2).fill(undefined).map((_,i)=>hamburgerCenter * 2 * i + (1 - i * 2) * hamburgerMarginX)
---

<svg xmlns="http://www.w3.org/2000/svg" class="h-6 xs:h-8 stroke-[0.2rem] stroke-black fill-none" viewBox="0 0 100 100" stroke-linecap="round">
	{hamburgerY.map((y)=><line x1={hamburgerX[0]} y1={y} x2={hamburgerX[1]} y2={y} />)}
</svg>