---
import { capitalizeEveryWord } from "@misc";
import Section from "./section.astro";
import Wrapper from "./wrapper.astro";

interface Props {
    collectionMenuMap:{[c:string]:{[d:string]:string[]}};
}

const { collectionMenuMap:{ earrings:{ subType, metalColor, material }} } = Astro.props as Props
const mainType = "earrings"
---

<Wrapper title={mainType}>
    {!!subType && !!subType.length && <Section title="Shop by Category" slugs={subType} strFormat={e=>capitalizeEveryWord(e.replaceAll('-', ' '))} mainType={mainType} browseAll="Shop All Categories" subMenuSlug="subtype" />}
    {!!metalColor && !!metalColor.length && <Section title="Shop by Colour" slugs={metalColor} strFormat={e=>capitalizeEveryWord(e.replaceAll('-', ' ')) + ' Earrings'} mainType={mainType} subMenuSlug="color" />}
    {!!material && !!material.length && <Section title="Shop by Material" slugs={material} strFormat={e=>capitalizeEveryWord(e.replaceAll('-', ' ')) + ' Earrings'} mainType={mainType} subMenuSlug="material" />}
</Wrapper>