---
import { PUBLIC_FM_PUBLIC_IMAGE_URL_PREFIX } from 'astro:env/client'

interface Props {
    text:string;
}

const { text } = Astro.props as Props

const imageFilename = `${PUBLIC_FM_PUBLIC_IMAGE_URL_PREFIX}promo-banner_20241226`
---
<div
    class="flex flex-col justify-center py-14 2xs:py-20 xs:py-26 sm:py-32 bg-cover bg-center"
    style={`background-image:image-set(${['avif','webp','jpg'].map(e=>`url(${imageFilename}.${e}) type('image/${e === 'jpg' ? 'jpeg' : e}')`)});`}
>
    <h1 class="text-center font-display text-2xl 2xs:text-3xl xs:text-4xl uppercase [word-spacing:0.4rem] text-white [text-shadow:0_0_0.4rem_#777777]">Promotions</h1>
</div>
<div 
    set:html={text} 
    class={`
        font-light
        max-w-3xl
        mx-auto
        px-4
        py-8
        text-sm
        xs:text-base
        [&>h2]:font-semibold
        [&>h2]:font-serif
        [&>h2]:text-lg
        [&>h2]:xs:text-2xl
        [&>*>li>a]:font-semibold
        [&>*>li>a]:underline
        [&>p>a]:font-semibold
        [&>p>a]:underline
        [&>*>li]:mt-2
        [&>ul>li]:list-disc
        [&>ul>li]:list-inside
        [&>p]:mt-4
    `.replaceAll('        ', ' ').replaceAll('\n','').trim()}
/>