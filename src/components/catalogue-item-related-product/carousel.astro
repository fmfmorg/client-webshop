---
import type { IProductImages } from '@components/catalogue-item/interfaces'
import Image from './image.astro';

interface IProps {
    images:IProductImages[];
    id:string;
    productPageKeyProduct:boolean;
    renderImages:boolean;
    productName:string;
}

const { images, id, productPageKeyProduct, renderImages, productName } = Astro.props as IProps

---

<>
    {
        images.map(({name,ext},i)=>(
            <Image {...{
                name,
                ext,
                id,
                checked:i===0,
                index:i,
                len:images.length,
                productPageKeyProduct,
                render:renderImages,
                showRadio:images.length > 1,
                productName,
            }} />
        ))
    }
</>